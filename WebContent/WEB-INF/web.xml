<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
 	<servlet>
    	<servlet-name>LoginServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.LoginServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>LoginServlet</servlet-name>
    	<url-pattern>/login</url-pattern>
  	</servlet-mapping>
  	
 	<servlet>
    	<servlet-name>LogOutServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.LogOutServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>LogOutServlet</servlet-name>
    	<url-pattern>/logout</url-pattern>
  	</servlet-mapping>  
  		
  	<servlet>
    	<servlet-name>RegistrServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.RegistrServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>RegistrServlet</servlet-name>
    	<url-pattern>/registr</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>StatisticsServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.StatisticsServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>StatisticsServlet</servlet-name>
    	<url-pattern>/statistics</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>QuizBuilderServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.QuizBuilderServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>QuizBuilderServlet</servlet-name>
    	<url-pattern>/quizbuilder</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>ImageServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.ImageServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>ImageServlet</servlet-name>
    	<url-pattern>/image/*</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>MainServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.MainServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>MainServlet</servlet-name>
    	<url-pattern>/</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>TestServlet</servlet-name>
      	<servlet-class>by.choppyratz.quizApp.controller.TestServlet</servlet-class>
   	</servlet>
  	<servlet-mapping>
    	<servlet-name>TestServlet</servlet-name>
    	<url-pattern>/quiz</url-pattern>
  	</servlet-mapping>
  </web-app>